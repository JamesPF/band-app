<div class="top-bar">
  <p><%= link_to "Log Out", logout_path %></p>
</div>
<div class="admin-container">
  <h1>Update Your 'About' Page</h1>
  <div class="side-menu">
    <%= link_to descriptions_path do %>
      <div class="option">
        <p>Artist Bio</p>
      </div>
    <% end %>
    <%= link_to posts_path do %>
      <div class="option">
        <p>News Posts</p>
      </div>
    <% end %>
    <%= link_to tourdates_path do %>
      <div class="option">
        <p>Shows</p>
      </div>
    <% end %>
    <%= link_to songs_path do %>
      <div class="option">
        <p>Music</p>
      </div>
    <% end %>
    <%= link_to vids_path do %>
      <div class="option">
        <p>Videos</p>
      </div>
    <% end %>
  </div>
  <div class="page-contents">
    <div class="new-entry">
      <%= link_to "Create ", add_description_path %>
    </div>
    <div class="nav-button">
      <%= link_to 'Edit News Posts', home_path %>
    </div>
    <div class="vid-list">
      <table>
        <% if @description %>
        <tr>
          <td><%= @description.header.truncate(50) %></td>
          <td><%= link_to 'Edit Bio', edit_description_path(@description) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>