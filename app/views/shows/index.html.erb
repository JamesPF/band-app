<!DOCTYPE html>
<head>
  <title>Project 2</title>
  <link rel="stylesheet" style="text/css" href="../../assets/stylesheets/style.css" >
</head>
<body>
  <div class="wrapper">
    <div class="header">
      <%= link_to(root_path) do %>
        <div class="logo">
        </div>
        <% end %>
      <div class="nav-social">
        <div class="social-icons">
          <ul>
            <li><a href="https://www.facebook.com/wearephoenix"><%= image_tag "facebook-icon.png" %></a></li>
            <li><a href="https://twitter.com/wearephoenix"><%= image_tag "twitter-icon.png" %></a></li>
            <li><a href=""><%= image_tag "instagram-icon.png" %><a/></li>
          </ul>
        </div>
        <div class="navigation">
          <ul>
            <%= link_to about_path do %>
              <li>About</li>
            <% end %>
            <%= link_to news_path do %>
              <li>News</li>
            <% end %>
            <%= link_to shows_path do %>
              <li>Shows</li>
            <% end %>
            <%= link_to music_path do %>
              <li>Music</li>
            <% end %>
            <%= link_to video_path do %>
              <li>Video</li>
            <% end %>
            <%= link_to photos_path do %>
              <li>Photos</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="tour-dates">
        <h1>Shows</h1>
          <div class="date-list">
        <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>City</th>
            <th>Venue</th>
            <th>Time</th>
            <th>Map</th>
            <th>Tickets</th>
          </tr>
        </thead>
        <%@tourdate.each do |tourdate| %>
          <tr>
            <td><%= Date.parse(tourdate.date).strftime('%m/%d/%Y') %></td>
            <td><%= tourdate.city %></td>
            <td><%= tourdate.venue %></td>
            <td><%= tourdate.time %></td>
            <td>
              <% if tourdate.address != "" %>
                <%= link_to "Map", ('http://maps.google.com/?q=' + tourdate.address) %>
              <% end %>
            </td>
            <td>
              <% if tourdate.tickets != "" %>
                <%= link_to "Tickets", tourdate.tickets %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </table>
          </div>
      </div>
    </div>
  </div>
</body>
</html>