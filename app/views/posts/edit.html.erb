<div class="admin-background">
<div class="top-bar">
  <p><%= link_to "Log Out", logout_path %> | <%= link_to "Home", home_path %></p>
</div>
<div class="admin-container">
  <div class="admin-header">
    <h1>Editing Post</h1>
  </div>
  <div class="side-menu">
    <%= link_to descriptions_path do %>
      <div class="option">
        <p>Artist Bio</p>
      </div>
    <% end %>
    <%= link_to posts_path do %>
      <div class="option">
        <p>News Posts</p>
      </div>
    <% end %>
    <%= link_to tourdates_path do %>
      <div class="option">
        <p>Shows</p>
      </div>
    <% end %>
    <%= link_to songs_path do %>
      <div class="option">
        <p>Music</p>
      </div>
    <% end %>
    <%= link_to vids_path do %>
      <div class="option">
        <p>Videos</p>
      </div>
    <% end %>
  </div>
  <div class="page-contents">
    <div class="back-button">
      <%= link_to 'Back to Posts', posts_path %>
    </div>
    <%= form_for(@post, :url => {:action => :update, :controller => :posts} ) do |p| %>
      <div class="field">
        <%= p.label :date %><br>
        <%= p.text_field :date, placeholder: 'MM/DD/YY' %>
      </div>
      <div class="field">
        <%= p.label :title %><br>
        <%= p.text_field :title %>
      </div>
      <div class="text-area">
        <%= p.label :content %><br>
        <%= p.text_area :body, :size =>'90%x20%' %>
      </div>
      <div class="actions">
        <%= p.submit "Update Post", class: "submit-button" %>
      </div>
    <% end %>
  </div>
</div>