<!DOCTYPE html>
<head>
  <title>Project 2</title>
  <link rel="stylesheet" style="text/css" href="../../assets/stylesheets/style.css" >
</head>
<body>
  <div class="wrapper">
    <div class="header">
      <%= link_to(root_path) do %>
        <div class="logo">
        </div>
        <% end %>
      <div class="nav-social">
        <div class="social-icons">
          <ul>
            <li><a href=""><%= image_tag "facebook-icon.png" %></a></li>
            <li><a href=""><%= image_tag "twitter-icon.png" %></a></li>
            <li><a href=""><%= image_tag "instagram-icon.png" %><a/></li>
          </ul>
        </div>
        <div class="navigation">
          <ul>
            <%= link_to about_path do %>
              <li>About</li>
            <% end %>
            <%= link_to news_path do %>
              <li>News</li>
            <% end %>
            <%= link_to shows_path do %>
              <li>Shows</li>
            <% end %>
            <%= link_to music_path do %>
              <li>Music</li>
            <% end %>
            <%= link_to video_path do %>
              <li>Video</li>
            <% end %>
            <%= link_to photos_path do %>
              <li>Photos</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="content">
        <% if @descriptions %>
          <h1><%= @descriptions.header %></h1>
            <%= image_tag @descriptions.avatar, class: "about-image" %>
          <% if @descriptions.check_box == 0 %>
            <div class="about-left">
              <p class="about"><%= @descriptions.body %></p>
            </div>
          <% else %>
            <p class="about"><%= @descriptions.body %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>